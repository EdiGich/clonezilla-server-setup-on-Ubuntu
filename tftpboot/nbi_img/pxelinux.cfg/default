
default vesamenu.c32
prompt 0
timeout 70
ontimeout 1

menu title Clonezilla Server PXE Menu
menu background drblwp.png
menu color border 30;44 #40000000 #00000000 all

# IPAPPEND 0 prevents the bootloader from adding conflicting kernel parameters.
IPAPPEND 0

label 1
  menu label Clonezilla Live (Working!)
  menu default
  kernel vmlinuz-pxe
  # The final working append line. It relies on the kernel's default (and successful)
  # DHCP process and uses the correct TFTP path relative to the server's root.
  append initrd=initrd-pxe.img boot=live fetch=tftp://192.168.100.1/filesystem.squashfs components quiet

label 2
  menu label Boot from local drive
  localboot 0
