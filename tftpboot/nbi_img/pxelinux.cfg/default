
default vesamenu.c32
prompt 0
timeout 70
ontimeout 1

menu title Clonezilla Server PXE Menu
menu background drblwp.png
menu color border 30;44 #40000000 #00000000 all

IPAPPEND 0

label clonezilla
  menu label Clonezilla Live (DRBL Client Mode)
  menu default
  kernel vmlinuz-pxe
  # This label is named "clonezilla" so that the drbl-ocs script can find and modify it.
  append initrd=initrd-pxe.img boot=live union=aufs ip=frommedia ocs_server="192.168.100.1" fetch=tftp://192.168.100.1/filesystem.squashfs components quiet

label local
  menu label Boot from local drive
  localboot 0
